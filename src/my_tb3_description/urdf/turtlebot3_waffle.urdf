<?xml version="1.0" ?>
<robot name="turtlebot3_waffle" xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- <xacro:include filename="$(find turtlebot3_description)/urdf/common_properties.urdf"/>

  <xacro:property name="r200_cam_rgb_px" value="0.005"/>
  <xacro:property name="r200_cam_rgb_py" value="0.018"/>
  <xacro:property name="r200_cam_rgb_pz" value="0.013"/>
  <xacro:property name="r200_cam_depth_offset" value="0.01"/> -->
  <xacro:arg name="namespace" default=""/>
  <xacro:property name="namespace" value="$(arg namespace)"/>
  <!-- Init colour -->
  <material name="black">
      <color rgba="0.0 0.0 0.0 1.0"/>
  </material>

  <material name="dark">
      <color rgba="0.15 0.15 0.15 1.0"/>
  </material>

  <material name="grey">
      <color rgba="0.7 0.7 0.7 1.0"/>
  </material>

  <material name="light">
      <color rgba="0.8 0.8 0.8 1.0"/>
  </material>

  <material name="white">
      <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <material name="light_black">
      <color rgba="0.2 0.2 0.2 1.0"/>
  </material>

  <material name="silver">
      <color rgba="0.98 0.91 0.86 1.0"/>
  </material>

  <material name="brown">
      <color rgba="0.87 0.72 0.53 1.0"/>
  </material>

  <material name="turquoise">
      <color rgba="0.25 0.88 0.82 1.0"/>
  </material>

  <material name="stone">
      <color rgba="1.0 0.9 0.8 1.0"/>
  </material>

  <material name="green">
      <color rgba="0.65 0.85 0.45 1.0"/>
  </material>

  <material name="orange">
      <color rgba="1.0 0.4 0.0 1.0"/>
  </material>

  <material name="yellow">
      <color rgba="0.9 0.9 0.6 1.0"/>
  </material>

  <material name="blue">
      <color rgba="0.0 0.0 0.9 1.0"/>
  </material>

  <material name="red">
      <color rgba="0.9 0.0 0.0 1.0"/>
  </material>

  <material name="clear">
      <color rgba="0.0 0.0 0.0 0.0"/>
  </material>

  <!-- ***************** GAITS ****************** -->

  <link name="base_footprint">
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-7" ixy="0" ixz="0" iyy="1e-7" iyz="0" izz="1e-7" />
    </inertial>
  </link>

  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0.0 0 0.010" rpy="0 0 0"/>
    <parent link="base_footprint"/>
    <child link="${namespace}base_link"/>
  </joint>

  <link name="${namespace}base_link">
    <visual>
      <origin xyz="-0.064 0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://turtlebot3_description/meshes/bases/waffle_base.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="light_black"/>
    </visual>

    <collision>
      <origin xyz="-0.064 0 0.047" rpy="0 0 0"/>
      <geometry>
        <box size="0.266 0.266 0.094"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.3729096e+00"/>
      <inertia ixx="8.7002718e-03" ixy="-4.7576583e-05" ixz="1.1160499e-04"
               iyy="8.6195418e-03" iyz="-3.5422299e-06"
               izz="1.4612727e-02" />
    </inertial>
  </link>

  <!-- Added camera link for tiltable camera -->
  <link name="${namespace}camera_link">
    <visual>
      <!-- Slightly in front and above the base -->
      <origin xyz="0.0 0.0 0.30" rpy="0 0 0"/>
      <geometry>
        <!-- Simple box as a placeholder for a camera body -->
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="light_black"/>
    </visual>

    <collision>
      <origin xyz="0.0 0.0 0.30" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="1e-4" ixy="0" ixz="0"
               iyy="1e-4" iyz="0"
               izz="1e-4" />
    </inertial>
  </link>

  <!-- Revolute joint to tilt the camera in pitch (around Y axis) -->
  <joint name="${namespace}camera_tilt_joint" type="revolute">
    <parent link="${namespace}base_link"/>
    <child link="${namespace}camera_link"/>
    <!-- Mount point: same XYZ as camera_link visual origin, rotation around Y axis -->
    <origin xyz="0.0 0.0 0.30" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <!-- +/- 90 deg range -->
    <limit lower="-1.57" upper="1.57" effort="5.0" velocity="1.0"/>
  </joint>

  <joint name="${namespace}wheel_left_joint" type="continuous">
    <origin xyz="0.0 0.144 0.043" rpy="0 0 0"/>
    <parent link="${namespace}base_link"/>
    <child link="${namespace}wheel_left_link"/>
    <axis xyz="0 1 0"/>
  </joint>
  <link name="${namespace}wheel_left_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57075 0 0 "/>
      <geometry>
        <mesh filename="package://turtlebot3_description/meshes/wheels/left_tire.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.018" radius="0.033"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0887070e-01"/>
      <origin xyz="4.6820446e-05 1.9262311e-05 -2.1350371e-03" rpy="0 0 0"/>
      <inertia ixx="1.0358379e-05" ixy="-1.3595221e-08" ixz="-7.1046448e-08"
               iyy="1.0358383e-05" iyz="-6.1650502e-08"
               izz="1.8101264e-05" />
    </inertial>
  </link>

  <joint name="${namespace}wheel_right_joint" type="continuous">
    <origin xyz="0.0 -0.144 0.043" rpy="0 0 0"/>
    <parent link="${namespace}base_link"/>
    <child link="${namespace}wheel_right_link"/>
    <axis xyz="0 1 0"/>
  </joint>
  <link name="${namespace}wheel_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57075 0 0 "/>
      <geometry>
        <mesh filename="package://turtlebot3_description/meshes/wheels/right_tire.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.018" radius="0.033"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0887070e-01"/>
      <origin xyz="-8.9773800e-06 6.2785221e-06 -2.1216219e-03" rpy="0 0 0"/>
      <inertia ixx="1.0358379e-05" ixy="-2.3046753e-09" ixz="-2.7485425e-08"
               iyy="1.0358383e-05" iyz="-2.7580623e-08"
               izz="1.8101264e-05" />
    </inertial>
  </link>

  <joint name="${namespace}caster_back_left_joint" type="continuous">
    <origin xyz="-0.177 0.064 0" rpy="0 0 0"/>
    <parent link="${namespace}base_link"/>
    <child link="${namespace}caster_back_left_link"/>
    <axis xyz="0 1 0"/>
  </joint>
  <link name="${namespace}caster_back_left_link">
    <visual>
      <origin xyz="0.0 0 0" rpy="-1.57075 0 0"/>
      <geometry>
        <mesh filename="package://turtlebot3_description/meshes/wheels/caster.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin xyz="0.0013 -0.0025 0.023" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.016"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.6412440e-02"/>
      <origin xyz="-1.0437188e-06 -2.7396575e-06 -7.9457339e-03" rpy="0 0 0"/>
      <inertia ixx="1.5599857e-06" ixy="9.0953497e-12" ixz="1.4248126e-11"
               iyy="1.5599862e-06" iyz="2.9393722e-10"
               izz="1.9628972e-06" />
    </inertial>
  </link>

  <joint name="${namespace}caster_back_right_joint" type="continuous">
    <origin xyz="-0.177 -0.064 0" rpy="0 0 0"/>
    <parent link="${namespace}base_link"/>
    <child link="${namespace}caster_back_right_link"/>
    <axis xyz="0 1 0"/>
  </joint>
  <link name="${namespace}caster_back_right_link">
    <visual>
      <origin xyz="0.0 0 0" rpy="-1.57075 0 0"/>
      <geometry>
        <mesh filename="package://turtlebot3_description/meshes/wheels/caster.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin xyz="0.0013 -0.0025 0.023" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.016"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.6412440e-02"/>
      <origin xyz="-1.0437188e-06 -2.7396575e-06 -7.9457339e-03" rpy="0 0 0"/>
      <inertia ixx="1.5599857e-06" ixy="9.0953497e-12" ixz="1.4248126e-11"
               iyy="1.5599862e-06" iyz="2.9393722e-10"
               izz="1.9628972e-06" />
    </inertial>
  </link>

  <!-- 이하 기존 내용 그대로... (나머지 링크/조인트/센서) -->
</robot>

